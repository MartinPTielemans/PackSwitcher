{
  "name": "packswitcher",
  "private": true,
  "version": "1.1.7",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run sync-version && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "sync-version": "node scripts/sync-version.js",
    "version": "pnpm run sync-version",
    "postversion": "pnpm run sync-version",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "pnpm run format:check && pnpm run lint && pnpm run type-check",
    "fix": "pnpm run format:fix && pnpm run lint:fix",
    "ci": "pnpm run check && pnpm run build"
  },
  "dependencies": {
    "@tauri-apps/api": "2.5.0",
    "@tauri-apps/plugin-updater": "2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tauri-apps/cli": "2.5.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
